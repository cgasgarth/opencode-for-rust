{
  "name": "@cgasgarth/opencode-for-rust",
  "version": "1.0.4",
  "description": "OpenCode plugin for Rust",
  "author": {
    "name": "Sisyphus",
    "email": "sisyphus@opencode.ai"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cgasgarth/opencode-for-rust"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src/version.ts"
  ],
  "dependencies": {
    "@opencode-ai/plugin": "1.0.85",
    "tree-sitter": "^0.22.1",
    "tree-sitter-rust": "^0.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "test": "bun test tests/",
    "typecheck": "tsc --noEmit",
    "build": "bun build ./src/index.ts --outdir dist --target bun && ./scripts/fix-tree-sitter.sh && tsc --project tsconfig.build.json",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "trustedDependencies": [
    "tree-sitter",
    "tree-sitter-rust"
  ]
}
