{
  "name": "@cgasgarth/opencode-for-rust",
  "version": "1.0.7",
  "description": "OpenCode plugin for Rust",
  "author": {
    "name": "Sisyphus",
    "email": "sisyphus@opencode.ai"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cgasgarth/opencode-for-rust"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src/version.ts"
  ],
  "dependencies": {
    "@opencode-ai/plugin": "1.0.85",
    "web-tree-sitter": "^0.22.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "tree-sitter-rust": "^0.24.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "test": "bun test tests/",
    "typecheck": "tsc --noEmit",
    "build": "bun build ./src/index.ts --outdir dist --target bun --external web-tree-sitter && cp node_modules/tree-sitter-rust/tree-sitter-rust.wasm dist/ && tsc --project tsconfig.build.json",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "trustedDependencies": [
    "tree-sitter",
    "tree-sitter-rust"
  ]
}
